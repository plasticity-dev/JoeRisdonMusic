<%= javascript_include_tag "lazyLoader.min.js", "data-turbolinks-track" => true  %>
<div class="container instagram-page">
  <h1 class="container insta-header">Instagram <%=link_to("<i class='fa fa-instagram' aria-hidden='true'></i>".html_safe, "https://www.instagram.com/joerisdonandthe815/", target: 'blank')%> </h1>

  <div class="grid">
    <% instagramposts[0..14].each do |image| %>
    <% p image %>
      <div class="grid-item"> <img data-src="<%=image['images']['standard_resolution']['url']%>" alt="<%=image['caption']['text'][0..8]%>..."> </div>
    <% end %>
  </div>

  <h1 class="text-center mt-4 insta-link"><%=link_to("Check out Joe's Instagram","https://www.instagram.com/joerisdonandthe815/", target: 'blank')%></h1>

</div>

<script>
  var $grid = $('.grid').masonry({
    itemSelector: '.grid-item',
    columnWidth: 200,
    fitWidth: true
  });

  $grid.on( 'click', '.grid-item', function() {
    $(".grid-item--gigante").removeClass('grid-item--gigante')
    $( this ).toggleClass('grid-item--gigante');
    $grid.masonry();
  });
</script>
